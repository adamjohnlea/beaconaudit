{% extends "layouts/base.twig" %}

{% block title %}Bulk Import URLs - Beacon Audit{% endblock %}

{% block page_header %}
    <div class="flex items-center gap-2 text-sm">
        <a href="/urls" class="text-text-muted hover:text-text-secondary transition-colors">URLs</a>
        <span class="text-text-muted">/</span>
        <span class="text-text-primary font-medium">Bulk Import</span>
    </div>
{% endblock %}

{% block content %}
<div class="max-w-lg" x-data="{ method: 'paste' }">
    {% if error is defined %}
        <div class="bg-error-bg border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
            {{ error }}
        </div>
    {% endif %}

    <form method="POST" action="/urls/bulk-import" enctype="multipart/form-data" class="space-y-5">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div>
            <label class="block text-sm font-medium text-text-primary mb-2">Import Method</label>
            <div class="flex gap-4">
                <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="import_type" value="paste" checked
                           class="h-4 w-4 border-border text-accent focus:ring-text-secondary"
                           @change="method = 'paste'">
                    <span class="ml-2 text-sm text-text-primary">Paste URL List</span>
                </label>
                <label class="inline-flex items-center cursor-pointer">
                    <input type="radio" name="import_type" value="csv"
                           class="h-4 w-4 border-border text-accent focus:ring-text-secondary"
                           @change="method = 'csv'">
                    <span class="ml-2 text-sm text-text-primary">Upload CSV</span>
                </label>
            </div>
        </div>

        <div x-show="method === 'paste'" x-transition.opacity.duration.150ms>
            <label for="urls" class="block text-sm font-medium text-text-primary mb-1.5">URLs (one per line)</label>
            <textarea name="urls" id="urls" rows="8"
                      placeholder="https://example.com&#10;https://another-site.com&#10;https://third-site.org">{{ old.urls is defined ? old.urls : '' }}</textarea>
        </div>

        <div x-show="method === 'csv'" x-cloak x-transition.opacity.duration.150ms>
            <label for="csv_file" class="block text-sm font-medium text-text-primary mb-1.5">CSV File</label>
            <input type="file" name="csv_file" id="csv_file" accept=".csv"
                   class="w-full text-sm text-text-secondary file:mr-3 file:h-9 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-accent-subtle file:text-text-primary hover:file:bg-border-subtle cursor-pointer">
            <p class="mt-1.5 text-xs text-text-muted">CSV must have a <code class="text-text-secondary">url</code> column. Optional: <code class="text-text-secondary">name</code>, <code class="text-text-secondary">frequency</code>.</p>
        </div>

        <div>
            <label for="audit_frequency" class="block text-sm font-medium text-text-primary mb-1.5">Default Audit Frequency</label>
            <select name="audit_frequency" id="audit_frequency">
                {% for freq in frequencies %}
                    <option value="{{ freq.value }}" {{ old.audit_frequency is defined and old.audit_frequency == freq.value ? 'selected' : '' }}>{{ freq.label }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="project_id" class="block text-sm font-medium text-text-primary mb-1.5">Project (optional)</label>
            <select name="project_id" id="project_id">
                <option value="">No project</option>
                {% for project in projects %}
                    <option value="{{ project.id }}">{{ project.name.value }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="flex justify-end gap-3 pt-2">
            <a href="/urls" class="inline-flex items-center h-9 px-4 border border-border rounded-lg text-sm font-medium text-text-secondary hover:text-text-primary hover:border-text-muted transition-colors duration-150">Cancel</a>
            <button type="submit" class="inline-flex items-center h-9 px-4 bg-accent text-white rounded-lg text-sm font-medium hover:bg-accent-hover transition-colors duration-150">Import URLs</button>
        </div>
    </form>
</div>
{% endblock %}
