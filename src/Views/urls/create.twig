{% extends "layouts/base.twig" %}

{% block title %}Add URL - Beacon Audit{% endblock %}

{% block page_header %}
    <div class="flex items-center gap-2 text-sm">
        <a href="/urls" class="text-text-muted hover:text-text-secondary transition-colors">URLs</a>
        <span class="text-text-muted">/</span>
        <span class="text-text-primary font-medium">Add</span>
    </div>
{% endblock %}

{% block content %}
<div class="max-w-lg">
    {% if error is defined %}
        <div class="bg-error-bg border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
            {{ error }}
        </div>
    {% endif %}

    <form method="POST" action="/urls" class="space-y-5">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div>
            <label for="url" class="block text-sm font-medium text-text-primary mb-1.5">URL</label>
            <input type="url" name="url" id="url" required
                   value="{{ old.url is defined ? old.url : '' }}"
                   placeholder="https://example.com">
        </div>

        <div>
            <label for="name" class="block text-sm font-medium text-text-primary mb-1.5">Name</label>
            <input type="text" name="name" id="name" required
                   value="{{ old.name is defined ? old.name : '' }}"
                   placeholder="My Website">
        </div>

        <div>
            <label for="audit_frequency" class="block text-sm font-medium text-text-primary mb-1.5">Audit Frequency</label>
            <select name="audit_frequency" id="audit_frequency">
                {% for freq in frequencies %}
                    <option value="{{ freq.value }}" {{ old.audit_frequency is defined and old.audit_frequency == freq.value ? 'selected' : '' }}>{{ freq.label }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="project_id" class="block text-sm font-medium text-text-primary mb-1.5">Project (optional)</label>
            <select name="project_id" id="project_id">
                <option value="">No project</option>
                {% for project in projects %}
                    <option value="{{ project.id }}">{{ project.name.value }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="flex justify-end gap-3 pt-2">
            <a href="/urls" class="inline-flex items-center h-9 px-4 border border-border rounded-lg text-sm font-medium text-text-secondary hover:text-text-primary hover:border-text-muted transition-colors duration-150">Cancel</a>
            <button type="submit" class="inline-flex items-center h-9 px-4 bg-accent text-white rounded-lg text-sm font-medium hover:bg-accent-hover transition-colors duration-150">Add URL</button>
        </div>
    </form>
</div>
{% endblock %}
