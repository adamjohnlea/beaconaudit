{% extends "layouts/base.twig" %}

{% block title %}Dashboard - Beacon Audit{% endblock %}

{% block page_header %}
    <h1 class="text-lg font-semibold text-text-primary tracking-tight">Dashboard</h1>
{% endblock %}

{% block page_actions %}
    {% if currentUser is defined and currentUser is not null and currentUser.admin %}
        <a href="/projects/create" class="inline-flex items-center h-8 px-3 bg-accent text-white text-[13px] font-medium rounded-lg hover:bg-accent-hover transition-colors duration-150">New Project</a>
    {% endif %}
{% endblock %}

{% block content %}
{% if projectCards is empty and unassignedSummary.totalUrls == 0 %}
    <div class="border border-border rounded-xl p-16 text-center">
        <div class="text-text-muted text-sm mb-4">No projects or URLs have been added yet.</div>
        {% if currentUser is defined and currentUser is not null and currentUser.admin %}
            <a href="/projects/create" class="inline-flex items-center h-9 px-4 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent-hover transition-colors duration-150">Create your first project</a>
        {% endif %}
    </div>
{% else %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        {% for card in projectCards %}
        <a href="/projects/{{ card.project.id }}/dashboard" class="group block bg-surface-raised border border-border rounded-xl p-5 hover:border-text-muted transition-colors duration-150">
            <h3 class="text-[15px] font-semibold text-text-primary tracking-tight">{{ card.project.name.value }}</h3>
            {% if card.project.description is not null %}
                <p class="mt-1 text-sm text-text-secondary line-clamp-2">{{ card.project.description }}</p>
            {% endif %}
            <div class="mt-4 flex items-center gap-6">
                <div>
                    <div class="text-xs text-text-muted">URLs</div>
                    <div class="text-lg font-semibold text-text-primary">{{ card.summary.totalUrls }}</div>
                </div>
                <div>
                    <div class="text-xs text-text-muted">Avg Score</div>
                    <div class="text-lg font-semibold {% if card.summary.averageScore >= 90 %}text-score-excellent{% elseif card.summary.averageScore >= 70 %}text-score-good{% elseif card.summary.averageScore > 0 %}text-score-poor{% else %}text-text-muted{% endif %}">
                        {% if card.summary.averageScore > 0 %}{{ card.summary.averageScore }}{% else %}&mdash;{% endif %}
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}

        {% if unassignedSummary.totalUrls > 0 %}
        <a href="/unassigned" class="group block border border-dashed border-text-muted rounded-xl p-5 hover:border-text-secondary transition-colors duration-150">
            <h3 class="text-[15px] font-semibold text-text-primary tracking-tight">Unassigned URLs</h3>
            <p class="mt-1 text-sm text-text-secondary">URLs not assigned to any project</p>
            <div class="mt-4 flex items-center gap-6">
                <div>
                    <div class="text-xs text-text-muted">URLs</div>
                    <div class="text-lg font-semibold text-text-primary">{{ unassignedSummary.totalUrls }}</div>
                </div>
                <div>
                    <div class="text-xs text-text-muted">Avg Score</div>
                    <div class="text-lg font-semibold {% if unassignedSummary.averageScore >= 90 %}text-score-excellent{% elseif unassignedSummary.averageScore >= 70 %}text-score-good{% elseif unassignedSummary.averageScore > 0 %}text-score-poor{% else %}text-text-muted{% endif %}">
                        {% if unassignedSummary.averageScore > 0 %}{{ unassignedSummary.averageScore }}{% else %}&mdash;{% endif %}
                    </div>
                </div>
            </div>
        </a>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
