{% extends "layouts/base.twig" %}

{% block title %}Dashboard - Beacon Audit{% endblock %}

{% block content %}
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
            <p class="mt-1 text-sm text-gray-600">Accessibility monitoring overview</p>
        </div>
        {% if currentUser is defined and currentUser is not null and currentUser.admin %}
            <a href="/projects/create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700">New Project</a>
        {% endif %}
    </div>
</div>

{% if projectCards is empty and unassignedSummary.totalUrls == 0 %}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <p class="text-gray-500 mb-4">No projects or URLs have been added yet.</p>
        {% if currentUser is defined and currentUser is not null and currentUser.admin %}
            <a href="/projects/create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700">Create your first project</a>
        {% endif %}
    </div>
{% else %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for card in projectCards %}
        <a href="/projects/{{ card.project.id }}/dashboard" class="block bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold text-gray-900">{{ card.project.name.value }}</h3>
            {% if card.project.description is not null %}
                <p class="mt-1 text-sm text-gray-500 line-clamp-2">{{ card.project.description }}</p>
            {% endif %}
            <div class="mt-4 grid grid-cols-2 gap-4">
                <div>
                    <div class="text-sm text-gray-500">URLs</div>
                    <div class="text-xl font-bold text-gray-900">{{ card.summary.totalUrls }}</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Avg Score</div>
                    <div class="text-xl font-bold {% if card.summary.averageScore >= 90 %}text-green-600{% elseif card.summary.averageScore >= 70 %}text-yellow-600{% elseif card.summary.averageScore > 0 %}text-red-600{% else %}text-gray-400{% endif %}">
                        {% if card.summary.averageScore > 0 %}{{ card.summary.averageScore }}{% else %}--{% endif %}
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}

        {% if unassignedSummary.totalUrls > 0 %}
        <a href="/unassigned" class="block bg-white rounded-lg shadow-sm border-2 border-dashed border-gray-300 p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold text-gray-900">Unassigned URLs</h3>
            <p class="mt-1 text-sm text-gray-500">URLs not assigned to any project</p>
            <div class="mt-4 grid grid-cols-2 gap-4">
                <div>
                    <div class="text-sm text-gray-500">URLs</div>
                    <div class="text-xl font-bold text-gray-900">{{ unassignedSummary.totalUrls }}</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Avg Score</div>
                    <div class="text-xl font-bold {% if unassignedSummary.averageScore >= 90 %}text-green-600{% elseif unassignedSummary.averageScore >= 70 %}text-yellow-600{% elseif unassignedSummary.averageScore > 0 %}text-red-600{% else %}text-gray-400{% endif %}">
                        {% if unassignedSummary.averageScore > 0 %}{{ unassignedSummary.averageScore }}{% else %}--{% endif %}
                    </div>
                </div>
            </div>
        </a>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
