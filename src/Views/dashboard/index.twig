{% extends "layouts/base.twig" %}

{% block title %}Dashboard - Beacon Audit{% endblock %}

{% block content %}
<div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="mt-1 text-sm text-gray-600">Accessibility monitoring overview</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-sm font-medium text-gray-500">Total URLs</div>
        <div class="mt-2 text-3xl font-bold text-gray-900">{{ summary.totalUrls }}</div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-sm font-medium text-gray-500">Total Audits</div>
        <div class="mt-2 text-3xl font-bold text-gray-900">{{ summary.totalAudits }}</div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-sm font-medium text-gray-500">Average Score</div>
        <div class="mt-2 text-3xl font-bold {% if summary.averageScore >= 90 %}text-green-600{% elseif summary.averageScore >= 70 %}text-yellow-600{% else %}text-red-600{% endif %}">
            {{ summary.averageScore }}
        </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-sm font-medium text-gray-500">Needs Attention</div>
        <div class="mt-2 text-3xl font-bold {% if summary.urlsNeedingAttention > 0 %}text-red-600{% else %}text-green-600{% endif %}">
            {{ summary.urlsNeedingAttention }}
        </div>
    </div>
</div>

{% if summary.totalUrls > 0 %}
<div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Score Distribution</h2>
        </div>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-4 gap-4 text-center">
            <div>
                <div class="text-2xl font-bold text-green-600">{{ summary.scoreDistribution.excellent }}</div>
                <div class="text-sm text-gray-500">Excellent (90+)</div>
            </div>
            <div>
                <div class="text-2xl font-bold text-yellow-600">{{ summary.scoreDistribution.good }}</div>
                <div class="text-sm text-gray-500">Good (70-89)</div>
            </div>
            <div>
                <div class="text-2xl font-bold text-orange-600">{{ summary.scoreDistribution.needsWork }}</div>
                <div class="text-sm text-gray-500">Needs Work (50-69)</div>
            </div>
            <div>
                <div class="text-2xl font-bold text-red-600">{{ summary.scoreDistribution.poor }}</div>
                <div class="text-sm text-gray-500">Poor (&lt;50)</div>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Monitored URLs</h2>
            <a href="/urls/create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700">Add URL</a>
        </div>
    </div>

    {% if urlSummaries is empty %}
        <div class="p-6 text-center text-gray-500">
            <p>No URLs being monitored yet.</p>
            <a href="/urls/create" class="mt-2 inline-block text-indigo-600 hover:text-indigo-800">Add your first URL</a>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Audits</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Frequency</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for urlSummary in urlSummaries %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ urlSummary.name }}</div>
                            <div class="text-sm text-gray-500">{{ urlSummary.address }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if urlSummary.latestScore is not null %}
                                <span class="text-sm font-semibold {% if urlSummary.latestScore >= 90 %}text-green-600{% elseif urlSummary.latestScore >= 70 %}text-yellow-600{% else %}text-red-600{% endif %}">
                                    {{ urlSummary.latestScore }}
                                </span>
                            {% else %}
                                <span class="text-sm text-gray-400">--</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {% if urlSummary.scoreGrade == 'A' %}bg-green-100 text-green-800
                                {% elseif urlSummary.scoreGrade == 'B' %}bg-yellow-100 text-yellow-800
                                {% elseif urlSummary.scoreGrade == 'C' %}bg-orange-100 text-orange-800
                                {% elseif urlSummary.scoreGrade == 'F' %}bg-red-100 text-red-800
                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                {{ urlSummary.scoreGrade }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ urlSummary.totalAudits }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ urlSummary.frequency }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if urlSummary.enabled %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Paused</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="/dashboard/{{ urlSummary.urlId }}" class="text-indigo-600 hover:text-indigo-900">View Details</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
