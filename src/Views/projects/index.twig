{% extends "layouts/base.twig" %}

{% block title %}Projects - Beacon Audit{% endblock %}

{% block page_header %}
    <h1 class="text-lg font-semibold text-text-primary tracking-tight">Projects</h1>
{% endblock %}

{% block page_actions %}
    <a href="/projects/create" class="inline-flex items-center h-8 px-3 bg-accent text-white text-[13px] font-medium rounded-lg hover:bg-accent-hover transition-colors duration-150">Add Project</a>
{% endblock %}

{% block content %}
<div class="bg-surface-raised border border-border rounded-xl">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="border-b border-border-subtle">
                    <th class="px-5 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Name</th>
                    <th class="px-5 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Description</th>
                    <th class="px-5 py-3 text-left text-xs font-medium text-text-muted uppercase tracking-wider">Created</th>
                    <th class="px-5 py-3 text-right text-xs font-medium text-text-muted uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                <tr class="border-b border-border-subtle last:border-0 hover:bg-accent-subtle transition-colors duration-100">
                    <td class="px-5 py-3.5 text-sm font-medium text-text-primary">{{ project.name.value }}</td>
                    <td class="px-5 py-3.5 text-sm text-text-secondary">{{ project.description ?? '&mdash;' }}</td>
                    <td class="px-5 py-3.5 text-sm text-text-secondary">{{ project.createdAt|date('Y-m-d') }}</td>
                    <td class="px-5 py-3.5 text-right">
                        <div class="flex items-center justify-end gap-3">
                            <a href="/projects/{{ project.id }}/edit" class="text-[13px] font-medium text-text-secondary hover:text-text-primary transition-colors">Edit</a>
                            <form method="POST" action="/projects/{{ project.id }}/delete" class="inline" onsubmit="return confirm('Are you sure you want to delete this project? All URLs will become unassigned.')">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">
                                <button type="submit" class="text-[13px] font-medium text-danger hover:text-danger-hover transition-colors">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
