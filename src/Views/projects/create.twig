{% extends "layouts/base.twig" %}

{% block title %}Add Project - Beacon Audit{% endblock %}

{% block page_header %}
    <div class="flex items-center gap-2 text-sm">
        <a href="/projects" class="text-text-muted hover:text-text-secondary transition-colors">Projects</a>
        <span class="text-text-muted">/</span>
        <span class="text-text-primary font-medium">Add</span>
    </div>
{% endblock %}

{% block content %}
<div class="max-w-lg">
    {% if error is defined %}
        <div class="bg-error-bg border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6 text-sm">
            {{ error }}
        </div>
    {% endif %}

    <form method="POST" action="/projects" class="space-y-5">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

        <div>
            <label for="name" class="block text-sm font-medium text-text-primary mb-1.5">Name</label>
            <input type="text" name="name" id="name" required
                   value="{{ old.name is defined ? old.name : '' }}">
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-text-primary mb-1.5">Description</label>
            <textarea name="description" id="description" rows="3">{{ old.description is defined ? old.description : '' }}</textarea>
        </div>

        <div class="flex justify-end gap-3 pt-2">
            <a href="/projects" class="inline-flex items-center h-9 px-4 border border-border rounded-lg text-sm font-medium text-text-secondary hover:text-text-primary hover:border-text-muted transition-colors duration-150">Cancel</a>
            <button type="submit" class="inline-flex items-center h-9 px-4 bg-accent text-white rounded-lg text-sm font-medium hover:bg-accent-hover transition-colors duration-150">Add Project</button>
        </div>
    </form>
</div>
{% endblock %}
